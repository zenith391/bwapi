{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "./modules",
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "node16",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["./src/*"]
}
